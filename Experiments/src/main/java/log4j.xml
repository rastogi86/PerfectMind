<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration debug="true" xmlns:log4j='http://jakarta.apache.org/log4j/'>
 
  <appender name="console" class="org.apache.log4j.ConsoleAppender">
    <param name="Target" value="System.out"/>
    <layout class="org.apache.log4j.PatternLayout">
    <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n" />
    </layout>
  </appender>

     <!-- File Appender -->
    
     <appender name="fileAppender" class="org.apache.log4j.FileAppender">
        <param name="File" value="C:/Users/rasto/eclipse-workspace/Experiments/src/main/java/com/LogsCheck/Logs_{%newDate}.log" />
        <param name="Append" value="true" />
        <layout class="org.apache.log4j.PatternLayout">
          <param name="ConversionPattern" value="%d{dd/MM/yyyy HH:mm:ss} %-5p %c{2} - %m%n"/>
        </layout>
    </appender>

      <!-- HTML Appender -->
    
   <appender name="htmlAppender" class="org.apache.log4j.DailyRollingFileAppender">
            <param name="File" value="C:/Users/rasto/eclipse-workspace/Experiments/src/main/java/com/LogsCheck/log.html"/>
    	<param name="DatePattern" value="'.'yyyy-MM-dd-HH'.html'"/>
    	<layout class="org.apache.log4j.HTMLLayout"/>
          <!--/layout-->
        </appender>               
 
  <root>
    <appender-ref ref="console" />
    <appender-ref ref="fileAppender" />
    <appender-ref ref="htmlAppender" />
    
  </root>
 
</log4j:configuration>